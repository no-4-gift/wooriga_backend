<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<!-- 이 xml 파일과 짝을 이뤄서 진행되는 자바mapper의 패키지명을 작성해야함 -->
<mapper namespace="com.webapp.woriga.mybatis.mapper.UserMapper">

	<!-- myBatis가 이용하는 query문장이 들어 있는 파일 java Mapper에 의해 이용됨. java Mapper - 
		xml Mapper - myBatis java Mapper안에 있는 메소드 이름과 xml Mapper 안의 query id가 일치해야 
		함. -->

	<!-- 리절트 맵 정의. primary key 컬럼은 id 태그로 표시해줌 -->
	<resultMap id="UserResult" type="User">
		<result column="name" property="name"/>
		<result column="email" property="email"/>
	</resultMap>

	<select id="selectAll" resultMap="UserResult">
		select * from user order by email
	</select>
	
	<select id="selectOne" resultMap="UserResult" parameterType="String">
		select * from user where email = #{email}
	</select>
	
	<insert id="insert" parameterType="User">
		insert into user values(#{name}, #{email})
	</insert>
	
	<delete id="delete" parameterType="String">
		delete from user where email = #{email}
	</delete>
	
	<update id="update" parameterType="User">
		update user set name = #{name} where email = #{email} 
	</update>

</mapper>